{
  "expo": {
    "name": "TaxSnap",
    "slug": "taxsnap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "taxsnap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.tax-snap.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "NSCameraUsageDescription": "TaxSnap needs camera access to scan receipts and extract tax deduction information.",
        "NSPhotoLibraryUsageDescription": "TaxSnap needs photo library access to import receipt images for tax tracking.",
        "LSSupportsOpeningDocumentsInPlace": true,
        "UIFileSharingEnabled": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#00C0E8"
      },
      "package": "com.tax-snap.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#00C0E8"
        }
      ],
      "expo-web-browser",
      "expo-localization",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#00C0E8",
          "sounds": []
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "TaxSnap needs camera access to scan receipts and extract tax deduction information."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "TaxSnap needs photo library access to import receipt images for tax tracking."
        }
      ],
      "expo-document-picker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e676ea88-a985-4e19-ab17-a0cfc88715e2"
      }
    }
  }
}
